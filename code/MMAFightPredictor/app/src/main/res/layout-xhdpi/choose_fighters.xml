<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_calculate"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="300sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginStart="15sp"
            android:layout_marginLeft="15sp"
            android:layout_height="wrap_content"
            android:id="@+id/choosecalctxt"
            android:text="@string/choose_fighters_msg"
            android:textSize="22sp"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:textColor="@color/Grey"
            android:layout_marginTop="20sp"/>


        <Spinner
            android:layout_width="match_parent"
            android:layout_marginRight="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginStart="15sp"
            android:layout_marginLeft="15sp"
            android:layout_height="70sp"
            android:layout_marginTop="140sp"
            android:id="@+id/weight_division_spinner"
            android:clickable="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_marginRight="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginStart="15sp"
            android:layout_marginLeft="15sp"
            android:layout_height="70sp"
            android:layout_gravity="top|center"
            android:layout_marginTop="220sp"
            android:id="@+id/fighter_a_spinner" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_marginRight="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginStart="15sp"
            android:layout_marginLeft="15sp"
            android:layout_height="70sp"
            android:layout_gravity="top"
            android:layout_marginTop="300sp"
            android:id="@+id/fighter_b_spinner" />

        <Button
            android:id="@+id/gobutton"
            android:text="@string/go_button"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:background="@drawable/button_style"
            android:layout_gravity="top|center"
            android:layout_marginTop="410sp"
            android:onClick="onClickChooseFightersNext"
            android:layout_marginBottom="20sp"
            />


    </FrameLayout>
</ScrollView>
