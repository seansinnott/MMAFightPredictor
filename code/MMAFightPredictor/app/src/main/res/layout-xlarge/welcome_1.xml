<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorAccent"
    android:layout_gravity="center"
    android:id="@+id/welcome1"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="600dp"
        android:layout_height="150sp"
        android:src="@drawable/title"
        android:id="@+id/welcome1title"
        android:background="@color/colorPrimary"
        android:layout_gravity="center|top"
        android:layout_marginTop="195sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="30sp"
        android:layout_height="wrap_content"
        android:id="@+id/welcome1txt"
        android:layout_gravity="center"
        android:text="@string/welcome_screen_one_msg"
        android:gravity="center"
        android:textSize="47sp"
        android:textColor="@color/Grey" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip_button"
        android:id="@+id/welc1skip"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="bottom|start"
        android:background="@color/colorAccent"
        android:layout_marginBottom="15sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_button"
        android:id="@+id/welc1next"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="bottom|end"
        android:background="@color/colorAccent"
        android:layout_marginBottom="15sp"/>

    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/welcome1dots"
        android:id="@+id/welc1dots"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="35sp" />

    <CheckBox
        android:id="@+id/checkbutt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:textSize="18sp"
        android:layout_marginBottom="120sp"
        android:gravity="center"
        android:text="@string/dont_show_again"
        android:buttonTint="@color/colorPrimary" />

</FrameLayout>