            android:layout_marginStart="30sp"
            android:layout_marginLeft="30sp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_gravity="top|center"
            android:id="@+id/heightBar"
            android:max="10"
            android:layout_marginTop="370sp"
            android:progress="5" />


        <TextView
            android:text="@string/weight_importance"
            android:gravity="center_vertical"
            android:foregroundGravity="left"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weightText"
            android:layout_gravity="top"
            android:layout_marginTop="430sp"
            android:layout_marginStart="30sp"
            android:layout_marginLeft="30sp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_gravity="top|center"
            android:id="@+id/weightBar"
            android:max="10"
            android:layout_marginTop="470sp"
            android:progress="5" />


        <TextView
            android:text="@string/age_importance"
            android:gravity="center_vertical"
            android:foregroundGravity="left"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ageText"
            android:layout_gravity="top"
            android:layout_marginTop="530sp"
            android:layout_marginStart="30sp"
            android:layout_marginLeft="30sp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_gravity="top|center"
            android:id="@+id/ageBar"
