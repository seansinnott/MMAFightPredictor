<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weighttxt"
            android:text="@string/which_fighter_better_msg"
            android:textSize="40sp"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:textColor="@color/Grey"
            android:layout_marginTop="80sp"/>

        <TextView
            android:id="@+id/nameB"
            android:textSize="40sp"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="250sp"
            android:gravity="end"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="20sp" />

        <TextView
            android:id="@+id/nameA"
            android:textSize="40sp"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="20sp"
            android:layout_marginTop="250sp"
            android:gravity="start"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20sp" />


        <TextView
            android:id="@+id/strikingtitle"
            android:textSize="35sp"
            android:text="@string/striking"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:layout_marginTop="350sp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/strikestatus"
            android:textSize="30sp"
            android:layout_gravity="center|top"
            android:layout_marginTop="440sp"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:layout_height="50sp"
            android:layout_gravity="top|center"
            android:id="@+id/opinionstrike"
            android:max="4"
            android:layout_marginTop="400sp"
            android:progress="2" />

        <TextView
            android:id="@+id/bjjtitle"
            android:textSize="35sp"
            android:text="@string/bjj"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:layout_marginTop="550sp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bjjstatus"
            android:textSize="30sp"
            android:layout_gravity="center|top"
            android:layout_marginTop="640sp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:layout_height="50sp"
            android:layout_gravity="top|center"
            android:id="@+id/opinionbjj"
            android:max="4"
            android:layout_marginTop="600sp"
            android:progress="2" />


        <TextView
            android:id="@+id/wrestlingtitle"
            android:textSize="35sp"
            android:text="@string/wrestling"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:layout_marginTop="750sp"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wrestlingstatus"
            android:textSize="30sp"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:layout_marginTop="840sp"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:layout_height="50sp"
            android:layout_gravity="top|center"
            android:id="@+id/opinionwrestling"
            android:max="4"
            android:layout_marginTop="800sp"
            android:progress="2"

            />

        <Button
            android:id="@+id/gobuttonopinion"
            android:text="@string/predict"
            android:textColor="@color/colorAccent"
            android:textSize="35sp"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:background="@drawable/button_style"
            android:layout_gravity="top|center"
            android:layout_marginTop="950sp"
            android:onClick="onClickUserOpinionNext"
            android:layout_marginBottom="20sp"

            />



    </FrameLayout>

</ScrollView>