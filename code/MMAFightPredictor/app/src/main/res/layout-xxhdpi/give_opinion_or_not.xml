<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titlepic"
            android:layout_width="290sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60sp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/give_opinion_msg"
            android:textColor="@color/Grey"
            android:textSize="22sp" />

        <LinearLayout
            android:id="@+id/makealgolay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titlepic"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">


            <ImageButton
                android:id="@+id/statsonly"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_below="@id/titlepic"
                android:layout_marginTop="30sp"
                android:adjustViewBounds="false"
                android:background="@drawable/factslogo"
                android:clickable="true"
                android:contentDescription="@string/stats_only"
                android:onClick="onClickStatsOnly" />


            <ImageButton
                android:id="@+id/opinionandstats"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_marginLeft="20sp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="30sp"
                android:background="@drawable/opinionlogo"
                android:clickable="true"
                android:contentDescription="@string/yes_give_opinion"
                android:onClick="onClickOpinion" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/makealgolay"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/stats_only"
                android:textColor="@color/Grey"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/yes_give_opinion"
                android:textColor="@color/Grey"
                android:textSize="30sp"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>